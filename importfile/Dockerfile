FROM node:20-alpine

# Install OpenSSL for Prisma
RUN apk add --no-cache openssl

WORKDIR /app

# Copy package files - ‡πÉ‡∏´‡πâ‡∏ä‡∏±‡∏î‡πÄ‡∏à‡∏ô‡∏ß‡πà‡∏≤ copy ‡∏ó‡∏±‡πâ‡∏á package.json ‡πÅ‡∏•‡∏∞ package-lock.json
COPY package.json package-lock.json ./
COPY prisma ./prisma/

# Install dependencies (‡πÉ‡∏ä‡πâ --omit=dev ‡πÅ‡∏ó‡∏ô --only=production)
RUN npm ci --omit=dev

# Generate Prisma Client
RUN npx prisma generate

# Copy scripts ‡πÅ‡∏•‡∏∞ source code
COPY scripts ./scripts/
COPY . .

# Build the application
RUN npm run build

# üî• ‡∏£‡∏±‡∏ô Database Setup ‡∏ï‡∏≠‡∏ô Build (‡∏ñ‡πâ‡∏≤ DATABASE_URL available)
RUN if [ "$NODE_ENV" = "production" ]; then \
      npx prisma db push && \
      node scripts/setup.js; \
    fi

# Expose port
EXPOSE 3001

# Start the application
CMD ["npm", "start"]